

    <p id="notice"><%= notice %></p>

    <h3 class="center">R E L E A S E S</h3>
      <hr/>

    <% if user_signed_in? %>
    <a class="btn btn-lg" <%= link_to 'Add Release', new_release_path %> </a>
  <% end %>


 <div id="releases" class="transitions-enabled">

      <% @releases.each do |release| %>

    <div class="box panel panel-default">
   
      
        <%= link_to image_tag(release.image.url(:medium)), release %>

           <div class="panel-body">

              <p class="lead center">
              
                <%= release.name %>

                 <% if user_signed_in? %>
                    | <%= link_to 'Edit', edit_release_path(release) %>
                    | <%= link_to 'Delete', release, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </p>

              <!-- <p><%= release.details %></p> -->

          </div>

    </div>

      <% end %>

  </div>

